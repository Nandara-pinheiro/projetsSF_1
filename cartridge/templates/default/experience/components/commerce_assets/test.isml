<style>
    .login{
        display: flex;
        flex-direction: column;
        margin-top: 4em;
    }
    .form-group{
        display: flex;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 0.5em;
    }
    .form-input{
        display: flex;
        flex-direction: column;
    }

    .forget{
        margin-top: 3em;
    }

    .btn-Login{
        margin-bottom: 1em;
    }
</style>

<form class="login" method="POST" name="login-form">
    <div class="form-group form-input">
        <label class="form-control-label" for="login-form-email">
            ${pdict.name}
        </label>
        <input type="email" id="login-form-email" class="form-control form-group" name="loginEmail">
    </div>

    <div class="form-group form-input">
        <label class="form-control-label" for="login-form-password">
            ${pdict.password}
        </label>
        <input type="password" id="login-form-password" class="form-control form-group" name="loginPassword">
    </div>

    <a class="form-group forget">${pdict.forgotPassword}</a>
    <button type="submit" class="form-group btn-Login">${pdict.buttonLogin}</button>
    <button type="submit" class="form-group btn-registro">${pdict.buttonRecord}</button>
</form>
